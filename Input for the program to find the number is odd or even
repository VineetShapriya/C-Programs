#include <stdio.h>

int main() {
    int number;

    printf("Enter a number: ");
    scanf("%d", &number);

    // Check if the number is even
    if (number % 2 == 0) {
        printf("%d is even.\n", number);
    }
    // If not even, it's odd
    else {
        printf("%d is odd.\n", number);
    }

    return 0;
}
